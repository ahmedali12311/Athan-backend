{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "%DOMAIN%/setting.json",
    "description": "setting model schema",
    "type": "object",
    "additionalProperties": false,
    "required": ["key", "value"],
    "properties": {
        "id": {
            "type": "number"
        },
        "key": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "value": {
            "type": "string",
            "minLength": 1,
            "maxLength": 5000
        },
        "is_readonly": {
            "type": "boolean"
        },
        "is_disabled": {
            "type": "boolean"
        },
        "field_type": {
            "type": "string",
            "enum": [
                "text",
                "number",
                "email",
                "password",
                "tel",
                "date",
                "color",
                "url",
                "textarea",
                "toggle",
                "file"
            ]
        },
        "data_type": {
            "type": "string",
            "enum": ["boolean", "number", "string"]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
    }
}
