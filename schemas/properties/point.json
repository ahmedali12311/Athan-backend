{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "%DOMAIN%/properties/point.json",
    "description": "point property schema",
    "type": "object",
    "additionalProperties": false,
    "required": ["type", "coordinates"],
    "properties": {
        "type": {
            "type": "string",
            "enum": ["Point"]
        },
        "coordinates": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": {
                "type": "number"
            }
        }
    }
}
