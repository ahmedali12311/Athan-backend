{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "%DOMAIN%/properties/line_string.json",
    "description": "LineString property schema",
    "type": ["object", "null"],
    "additionalProperties": false,
    "required": ["type", "coordinates"],
    "properties": {
        "type": {
            "type": ["string", "null"],
            "enum": ["LineString"]
        },
        "coordinates": {
            "type": ["array", "null"],
            "items": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {
                    "type": "number"
                }
            }
        }
    }
}
