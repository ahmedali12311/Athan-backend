{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "%DOMAIN%/role.json",
	"description": "role model schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"name"
	],
	"properties": {
		"id": {
			"type": "number",
			"minimum": 0
		},
		"name": {
			"type": "string",
			"minLength": 1,
			"maxLength": 255
		},
		"permissions": {
			"type": "array",
			"minItems": 0,
			"items": {
				"type": "number",
				"minimum": 1
			}
		}
	}
}
