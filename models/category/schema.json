{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "%DOMAIN%/category.json",
    "description": "category model schema",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "name"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "img": {
            "type": [
                "string",
                "null"
            ]
        },
        "thumb": {
            "type": [
                "string",
                "null"
            ]
        },
        "depth": {
            "type": "number",
            "minimum": 0
        },
        "sort": {
            "type": "number",
            "minimum": 0
        },
        "is_disabled": {
            "type": "boolean"
        },
        "is_featured": {
            "type": "boolean"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "parent": {
            "$ref": "%DOMAIN%/properties/uuid_obj_null.json"
        },
        "super_parent": {
            "$ref": "%DOMAIN%/properties/uuid_obj_null.json"
        }
    }
}
